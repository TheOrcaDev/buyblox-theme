<script>
function createFAQConfetti() {
  const emojis = ['❄️', '❄️', '❄️', '❄️', '❄️', '❄️'];

  for (let i = 0; i < 8; i++) {
    setTimeout(() => {
      const confetti = document.createElement('div');
      confetti.className = 'bbfaq-confetti';
      confetti.textContent = emojis[Math.floor(Math.random() * emojis.length)];
      confetti.style.left = (20 + Math.random() * 60) + '%';
      confetti.style.top = '-30px';
      confetti.style.setProperty('--drift', (Math.random() * 150 - 75) + 'px');
      confetti.style.animationDelay = (Math.random() * 0.2) + 's';

      document.body.appendChild(confetti);

      setTimeout(() => {
        confetti.remove();
      }, 3000);
    }, i * 50);
  }
}

function toggleFAQ(button) {
  const item = button.closest('.bbfaq-item');
  const answer = item.querySelector('.bbfaq-answer');
  const wasActive = item.classList.contains('active');

  // Close all other FAQs
  document.querySelectorAll('.bbfaq-item').forEach(faq => {
    if (faq !== item) {
      faq.classList.remove('active');
      faq.querySelector('.bbfaq-answer').style.maxHeight = '0px';
    }
  });

  // Toggle current FAQ
  if (wasActive) {
    item.classList.remove('active');
    answer.style.maxHeight = '0px';
  } else {
    item.classList.add('active');
    answer.style.maxHeight = answer.scrollHeight + 'px';

    // Create confetti effect
    createFAQConfetti();

    // Smooth scroll to FAQ item
    setTimeout(() => {
      item.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, 100);
  }
}

// Close FAQ on window resize to recalculate heights
let resizeTimer;
window.addEventListener('resize', function() {
  clearTimeout(resizeTimer);
  resizeTimer = setTimeout(function() {
    document.querySelectorAll('.bbfaq-item.active .bbfaq-answer').forEach(answer => {
      answer.style.maxHeight = answer.scrollHeight + 'px';
    });
  }, 250);
});
</script>

